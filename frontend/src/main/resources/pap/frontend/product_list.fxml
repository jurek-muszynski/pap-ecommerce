<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="pap.frontend.controllers.ProductController"
            fx:id="rootLayout">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <TextField fx:id="searchField" promptText="Search by Name" />
            <Button text="Search" onAction="#searchByName" />
            <ComboBox fx:id="categoryComboBox" promptText="Select Category" />
            <Button text="Filter by Category" onAction="#filterByCategory" />
            <Button text="Refresh" onAction="#updateTable" />
        </HBox>
    </top>

    <center>
        <TableView fx:id="productTable">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name" />
                <TableColumn fx:id="descriptionColumn" text="Description" />
                <TableColumn fx:id="priceColumn" text="Price" />
                <TableColumn fx:id="categoryColumn" text="Category" />
            </columns>
        </TableView>
    </center>
</BorderPane>
