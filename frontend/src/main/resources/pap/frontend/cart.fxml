<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pap.frontend.controllers.CartController"
      spacing="10" alignment="TOP_CENTER" style="-fx-padding: 20;">
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Back to Products" onAction="#goBackToProducts"/>
        <Button text="Refresh Cart" onAction="#loadCartItems"/>
        <Button text="Summarize" onAction="#goToSummary"/>
        <Label text="Your Cart" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    </HBox>
    <ScrollPane fitToWidth="true">
        <VBox fx:id="cartPane" spacing="10" style="-fx-padding: 10;"></VBox>
    </ScrollPane>
</VBox>
