<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pap.frontend.controllers.LoginController" spacing="20" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Login" style="-fx-font-size: 18px;"/>
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <Button text="Login" onAction="#handleLogin"/>
    <Button text="Don't have an account? Register" onAction="#redirectToRegistration" />
    <Label fx:id="errorLabel" style="-fx-text-fill: red;" />
</VBox>
